@model Blog.Models.EmailFormModel

<body>
    <!--================ Hero sm banner start =================-->
    <section class="mb-30px">
        <div class="container">
            <div class="hero-banner hero-banner--sm">
                <div class="hero-banner__content">
                    <h1>Contact Me</h1>
                    <nav aria-label="breadcrumb" class="banner-breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Contact</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!--================ Hero sm banner end =================-->
    <!-- ================ contact section start ================= -->
    <section class="section-margin--small section-margin">
        <div class="container">

            <form action="#/" class="form-contact contact_form" action="contact_process.php" method="post" id="contactForm" novalidate="novalidate">

                <div class="row">
                    <div class="col-md-4 col-lg-3 mb-4 mb-md-0">
                        <div class="media contact-info">
                            <span class="contact-info__icon"><i class="ti-home"></i></span>
                            <div class="media-body">
                                <h3>North Carolina United States</h3>
                                <p>Thomasville</p>
                            </div>
                        </div>
                        <div class="media contact-info">
                            <span class="contact-info__icon"><i class="ti-headphone"></i></span>
                            <div class="media-body">
                                <h3><a href="tel:3368479188">(336) 847 9188</a></h3>
                                <p>Mon to Fri 9am to 6pm</p>
                            </div>
                        </div>
                        <div class="media contact-info">
                            <span class="contact-info__icon"><i class="ti-email"></i></span>
                            <div class="media-body">
                                <h3><a href="mailto:mattpark102@outlook.com">mattpark102@outlook.com</a></h3>
                                <p>Email me at any time!</p>
                            </div>
                        </div>
                    </div>


                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="col-md-8 col-lg-9">
                            <div class="row">
                                <div class="col-lg-5">
                                    <div class="form-group">
                                        @*<input class="form-control" name="name" id="name" type="text" placeholder="Enter your name">*@
                                        @Html.TextBoxFor(m => m.FromName, new { @class = "form-control", @placeholder = "Name" })
                                        @Html.ValidationMessageFor(m => m.FromName)
                                    </div>
                                    <div class="form-group">
                                        @*<input class="form-control" name="email" id="email" type="email" placeholder="Enter email address">*@
                                        @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", @placeholder = "example@email.com" })
                                        @Html.ValidationMessageFor(m => m.FromEmail)
                                    </div>

                                </div>
                                <div class="col-lg-7">
                                    <div class="form-group">
                                        @*<textarea class="form-control different-control w-100" name="message" id="message" cols="30" rows="5" placeholder="Enter Message"></textarea>*@
                                        @Html.TextAreaFor(m => m.Message, new { @class = "form-control different-control w-100", placeholder = "Enter Message", cols = "30", rows = "5" })
                                        @Html.ValidationMessageFor(m => m.Message)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group text-center text-md-right mt-3">

                                <input type="submit" class="button button--active button-contactForm" value="Send Message" />
                            </div>
                        </div>

                    }


                </div>
            </form>

        </div>
    </section>
    <!-- ================ contact section end ================= -->

</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}